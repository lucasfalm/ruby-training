<section id="posts" data-controller="posts" style="display: flex;flex-direction: column;gap: 1rem;width: 100vw;justify-content: center;align-items: center;">
  <h1>Posts</h1>

  <%= link_to 'New Post', new_post_path %>

  <button data-action="click->posts#toggleTitle" style="">
    show title
  </button>

  <section data-posts-target="title"></section>

  <section style="display: flex;flex-direction: column;gap: 1rem;width: 30rem; height: 30rem;background-color: purple; padding: 1rem;max-height: max(50vh, 50rem);overflow: scroll;border-radius: 0.5rem">
    <% @posts.map do |post| %>
      <%= render post %>
    <% end %>
  </section>
</section>
