<section></section>
<h1>New Post</h1>
<section data-posts-target="post"></section>

<%= form_with model: @post, data: { turbo: true } do |f| %>
  <div>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div>
    <%= f.label :content %>
    <%= f.text_area :content %>
  </div>
  <%= f.submit 'Create Post' %>
<% end %>